{
	"name": "@sapphire/cli",
	"version": "1.0.0",
	"description": "CLI for Sapphire Framework",
	"author": "@sapphire",
	"license": "MIT",
	"type": "module",
	"main": "dist/cli.js",
	"bin": {
		"sapphire": "./dist/cli.js"
	},
	"imports": {
		"#prompts": "./dist/prompts/index.js",
		"#prompts/*": "./dist/prompts/*.js",
		"#functions": "./dist/functions/index.js",
		"#functions/*": "./dist/functions/*.js",
		"#commands/*": "./dist/commands/*.js",
		"#constants": "./dist/constants.js"
	},
	"sideEffects": "false",
	"files": [
		"dist",
		"!dist/*.tsbuildinfo",
		"!dist/**/*.js.map",
		"!dist/**/*.d.ts",
		"!dist/**/*.d.ts.map",
		"oclif.manifest.json",
		"templates"
	],
	"scripts": {
		"lint": "eslint src --ext ts --fix",
		"format": "prettier --write src/**/*.ts",
		"update": "yarn up \"*\" -i",
		"build": "tsc -b src",
		"clean": "tsc -b src --clean",
		"watch": "tsc -b src -w",
		"sversion": "standard-version -a",
		"commit": "git-cz",
		"cz": "git-cz",
		"prepublishOnly": "yarn build",
		"prepare": "husky install .github/husky"
	},
	"dependencies": {
		"chalk": "^4.1.2",
		"commander": "^8.3.0",
		"find-up": "^5.0.0",
		"ora": "^6.0.1",
		"prompts": "^2.4.2",
		"tslib": "^2.3.1",
		"yaml": "^1.10.2"
	},
	"devDependencies": {
		"@commitlint/cli": "^13.2.1",
		"@commitlint/config-conventional": "^13.2.0",
		"@favware/npm-deprecate": "^1.0.4",
		"@sapphire/eslint-config": "^4.0.1",
		"@sapphire/prettier-config": "^1.2.3",
		"@sapphire/ts-config": "^3.1.2",
		"@types/node": "^16.11.5",
		"@types/prompts": "^2.0.14",
		"@typescript-eslint/eslint-plugin": "^5.2.0",
		"@typescript-eslint/parser": "^5.2.0",
		"cz-conventional-changelog": "^3.3.0",
		"eslint": "^8.1.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-prettier": "^4.0.0",
		"globby": "^12.0.2",
		"husky": "^7.0.4",
		"lint-staged": "^11.2.4",
		"prettier": "^2.4.1",
		"pretty-quick": "^3.1.1",
		"standard-version": "^9.3.2",
		"ts-node": "^10.4.0",
		"typescript": "^4.4.4"
	},
	"engines": {
		"node": ">=v16.6.0",
		"npm": ">=7.0.0"
	},
	"keywords": [
		"@sapphire/cli",
		"bot",
		"typescript",
		"ts",
		"yarn",
		"discord",
		"sapphire",
		"discordjs"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/sapphiredev/cli.git"
	},
	"bugs": {
		"url": "https://github.com/sapphiredev/cli/issues"
	},
	"homepage": "https://www.sapphirejs.dev",
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"lint-staged": {
		"*.{mjs,js,ts}": "eslint --fix --ext mjs,js,ts"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"publishConfig": {
		"access": "public"
	},
	"resolutions": {
		"ansi-regex": "^5.0.1"
	},
	"prettier": "@sapphire/prettier-config",
	"packageManager": "yarn@3.0.2"
}
